<%= stylesheet_pack_tag 'hello_vue' %>
<%= javascript_pack_tag 'hello_vue' %>
<div class="col-lg-12">
  <div class="panel panel-transparent">
    <ul class="nav nav-tabs nav-tabs-simple nav-tabs-left bg-white" id="tab-3">
      <li class="active">
        <a data-toggle="tab" href="#description">Description</a>
      </li>
      <li>
        <a data-toggle="tab" href="#images">Images</a>
      </li>
      <li>
        <a data-toggle="tab" href="#shipping">Shipping</a>
      </li>
      <li>
        <a data-toggle="tab" href="#confirm">Preview</a>
      </li>
    </ul>
    <div class="tab-content bg-white">
      <div class="tab-pane" id="description">
        <div class="col-md-12">

            <h3 class="pull-left bold text-black no-margin">Describe your item</h3>
            <div class="clearfix"></div>
            <hr>
            <br>

          <%= form_with(model: @product, local: true) do |form| %>
              <div class="form-group">
                <div class="col-md-3">
                  <%= form.label :name, 'Name', class: 'control-label' %>
                </div>
                <div class="col-md-8">
                  <%= form.text_field :name, class: 'form-control' %>
                </div>
              </div>

              <br>
              <br>

              <div class="form-group">
                <div class="col-md-3">
                  <%= form.label :description, 'Description', class: 'control-label' %>
                </div>
                <div class="col-md-8">
                  <%= form.text_area :description, class: 'form-control' %>
                </div>
              </div>

              <br>
              <br>


              <div class="form-group">
                <div class="col-md-3">
                  <%= form.label :price, 'Price', class: 'control-label' %>
                </div>
                <div class="col-md-8">
                  <%= form.text_field :price, class: 'form-control' %>
                </div>
              </div>

              <div class="clearfix"></div>
              <hr>

              <div class="form-group">
                <%= form.submit "Create Product", class: 'btn btn-primary' %>
              </div>
              </div>
          <% end %>
          </div>
      <div class="tab-pane " id="images">
        <%= content_tag :div,
                        nil,
                        id: "new-product-images",
                        data: { product: @product.id }
        %>
      </div>
    </div>
    <div class="tab-pane" id="shipping">

    </div>
    <div class="tab-pane" id="confirm">
    </div>
  </div>
</div>
<%= javascript_pack_tag "new-product-images" %>
