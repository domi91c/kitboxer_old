<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.user_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td> <%= button_to "Delete", product, :method => :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', "#new_product_modal", "data-toggle" => "modal" %>
<!-- Borrower Info Modal -->
<div class="modal fade" id="new_product_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">New Product</h4>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span></button>
      </div>
      <%= render 'products/modals/new', product: Product.new %>
    </div>
  </div>
</div>
